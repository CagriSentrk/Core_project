@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Tecrübe Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">Id</th>
                <th scope="col" class="sort" data-sort="budget">İsim</th>
                <th scope="col" class="sort" data-sort="status">Resim yolu</th>
                <th scope="col" class="sort" data-sort="status">Giriş</th>
                <th scope="col" class="sort" data-sort="status">Çıkış</th>
                <th scope="col" class="sort" data-sort="status">Açıklama</th>
             
      
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
 
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {


                <tr>
                    <td>@item.ExperienceID</td>
                    <td>
                        @item.Name
                    </td>
                    <td class="budget">
                        @item.ImageUrl.Substring(0,14) ...
                    </td>
                    <td class="budget">
                        @item.Date
                    </td> <td class="budget">
                        @item.Date2.
                    </td> <td class="budget">
                        @item.Description.Substring(0,5) ...
                    </td>

                    <td> <a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a></td>
                    <td> <a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Experience/AddExperience/" class="btn btn-primary"> Yeni Tecrübe ekle</a>
</div>