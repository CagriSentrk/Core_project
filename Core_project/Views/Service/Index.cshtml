@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0"> hizmet Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">###</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Resim yolu</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>

            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {


                <tr>
                   
                    <td>
                        @item.ServiceID
                    </td>
                       <td class="budget">
                        @item.Title
                    </td>
                    <td class="budget">
                        @item.ImageUrl
                    </td>



                    <td>@Html.ActionLink("SİL", "DeleteService",new {id=item.ServiceID},new { @class= "btn btn-outline-danger",onclick="return confirm('Gerçekten silmek istiyor musunuz?')" })</td>
                    
                    <td> <a href="/Service/EditService/@item.ServiceID" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Service/AddService" class="btn btn-primary"> Yeni hizmet ekle</a>
</div>