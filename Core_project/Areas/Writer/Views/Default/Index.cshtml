@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string values = "";
    string button_color = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık.</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            if (@item.Status == true)
                            {
                                values= "Aktif";
                                button_color = "badge badge-success";

                            }
                            else
                            {
                                values = "Pasif";
                                button_color = "badge badge-danger";
                            }

                            <tr>
                                <th>@item.Announcement_ID</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>

                                <td><label class="@button_color">@values</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.Announcement_ID" class="btn btn-primary">Detay</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>